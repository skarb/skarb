#!/usr/bin/env RUBY_PATH
require 'optparse'
$: << 'RUBYC_LIBDIR'
require 'manager'

ARGV.push '-h' if ARGV.empty?

options = {}

op = OptionParser.new do |opts|
  opts.banner = "Usage: rubyc [options] input"
  opts.separator "Options:"

  opts.on("-o FILE", "Place the output into FILE") do |output|
    options[:output] = output
  end

  opts.on('-C', 'Output the C code and exit') do
    options[:emit_only] = true
  end

  opts.on('-c', 'Don\'t link, only compile') do
    options[:dont_link] = true
  end

  opts.on('--math_inline', 'Attempt to use standard C operators in math expressions') do
    options[:math_inline] = true
  end

  opts.on('--stack_alloc', 'Attempt to use stack allocation for function local objects') do
    options[:stack_alloc] = true
  end

  opts.on('--object_reuse', 'Attempt to reuse memory of no longer accessible local object (compile time garbage collection)') do
    options[:object_reuse] = true
  end

  opts.on("-h", "Show this message") do
    puts opts.help
    exit 0
  end
end

begin
  op.parse!
rescue OptionParser::InvalidOption => e
  puts e
  puts op.help
  exit 1
end

if ARGV.length > 1
  puts "Only one input file should be specified"
  puts op.help
  exit 1
end

input = if ARGV[0] == '-'
          STDIN
        else
          begin
            File.open ARGV.pop
          rescue Exception => e
            puts e
            exit 1          
          end
        end

Manager.new.compile(input, options)
